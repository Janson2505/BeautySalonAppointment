@model BeautySalonAppointments.Models.Appointment

@{
    ViewData["Title"] = "Usuń wizytę";
}

<h1>Usuń wizytę</h1>

<div class="alert alert-danger mb-4">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> Uwaga!</h4>
    <p>Czy na pewno chcesz usunąć tę wizytę?</p>
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">Szczegóły wizyty</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Data wizyty:</dt>
            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Usługa:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Service)</dd>

            <dt class="col-sm-3">Klient:</dt>
            <dd class="col-sm-9">@(Model.Client?.Name ?? "Nieznany klient")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-x-lg"></i> Anuluj
    </a>
</form>
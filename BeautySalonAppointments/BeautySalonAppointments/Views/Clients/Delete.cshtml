@model BeautySalonAppointments.Models.Client

@{
    ViewData["Title"] = "Usuń klienta";
}

<h1>Usuń klienta</h1>

<div class="alert alert-danger mb-4">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> Uwaga!</h4>
    <p>Czy na pewno chcesz usunąć tego klienta?</p>
    @if (ViewBag.HasAppointments != null && ViewBag.HasAppointments)
    {
        <p class="fw-bold mt-2">Ten klient ma zaplanowane wizyty! Usunięcie klienta może wpłynąć na istniejące rezerwacje.</p>
    }
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">Dane klienta</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Imię i nazwisko:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Numer telefonu:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-x-lg"></i> Anuluj
    </a>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Powrót do listy klientów
    </a>
</div>